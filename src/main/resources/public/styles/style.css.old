@font-face {
    font-family: "FuturaHandwritten";
    src: url("../fonts/FuturaHandwritten.ttf");
}

@font-face {
    font-family: "gloriahallelujah";
    src: url("../fonts/gloriahallelujah.ttf");
}

body {
  font-family: "FuturaHandwritten";
  overflow: hidden;
}

.header {
    min-height: 200px;
}

.narration-container {
  width: 100%;
  margin: 20px;
  text-align: center;
  min-height: 120px;
}
.narration {
  padding-top: 20px;
  font-size: 2rem;
}

.narration-action {
  width: 100%;
  margin: 20px;
  text-align: center;
}
.btn-narration {
  border: 3px solid black;
  background-color: transparent;
  cursor: pointer;
  font-size: 1.5rem;
  padding: 5px 20px;
}

.theater {
  min-height: 500px;
  background-color: #e5e5e5;
  text-align: center;
}

.credit-container {
  width: 100%;
  margin: 20px;
  text-align: center;      
}

.jumbo-text-container {
    width: 100%;
    margin-top: 300px;
    text-align: center
}
.jumbo-text {
    font-size: 2.5rem;
}

.jumbo-text-title {
    font-size: 4rem;
    font-family: 'gloriahallelujah';
}
.jumbo-text-subtitle {
    font-size: 2rem;
}

.theater img {
    height: 500px;
}
